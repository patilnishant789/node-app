pipeline{
  agent any
  environment{
    Docker_Tag = getDockerTag()
  }
  stages{
    stage("Build Docker Image"){
      steps{
        withCredentials([sshUserPrivateKey(credentialsId: 'ec2-user', keyFileVariable: 'ec2-user', passphraseVariable: '', usernameVariable: 'ec2-user')]) {
          sh "docker build . -t devopsnishant/nodeapp:${Docker_Tag}"
        }
      }
    }
  }
}

def getDockerTag(){
  def tag = sh script: 'git rev-parse HEAD', returnStdout: true
  return tag
}
